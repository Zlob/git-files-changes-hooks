{
    "name": "vamakin/git-files-changes-hooks",
    "description": "Set of git hooks, that automatically run custom commands when some files changes. In example, run composer install when composer.lock has been changed",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vlad Makin",
            "email": "vamakin@gmail.com"
        }
    ],
    "require": {
        "composer/composer": "^1.4",
        "hassankhan/config": "^0.10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Vamakin\\GitFilesChangesHooks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
